@model MyApp.Mvc.Models.IndexViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h2>MVC Helpers</h2>
    <p class="lead">Encriptando Ids automaticamente.</p>
</div>

<ul class="nav nav-tabs">
    <li role="presentation" class="active"><a data-toggle="tab" href="#post">Post</a></li>
    <li role="presentation"><a data-toggle="tab" href="#usage">Utilização</a></li>
    <li role="presentation"><a data-toggle="tab" href="#ajax">Ajax</a></li>
</ul>
<div id="tab-content" class="tab-content">
    <div class="tab-pane active" id="post">
        <h1>Red</h1>
        @using (Html.BeginForm())
        {
            <div class="form-group">

                @Html.LabelFor(m => m.IdTest1)
                @Html.TextBoxFor(m => m.IdTest1)
                @Html.TextBox("asd", Model.IdTest1.ToString())
                <br />
                @Model.IdTest1.ToString()

            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.IdTest2)
                @Html.TextBoxFor(m => m.IdTest2)
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        }
    </div>
